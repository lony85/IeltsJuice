<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/colorTertiary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OneToOneActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimaryVariant"
        android:fitsSystemWindows="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            app:collapsedTitleTextAppearance="@font/roboto"
            app:contentScrim="?attr/colorPrimaryVariant"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:id="@+id/collapsingBarMain"
            style="?attr/collapsingToolbarLayoutLargeStyle"
            android:layout_width="match_parent"
            android:layout_height="100dp">


            <ImageView
                app:layout_collapseMode="parallax"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="-30dp"
                android:layout_marginTop="45dp"
                android:fitsSystemWindows="true"
                android:src="@drawable/img_orance"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_gravity="end"
                app:layout_collapseMode="parallax"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="-50dp"
                android:layout_marginTop="-25dp"
                android:fitsSystemWindows="true"
                android:src="@drawable/img_orance"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                app:layout_collapseMode="parallax"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:fitsSystemWindows="true"
                android:src="@drawable/ielts_juice_logo" />
            <androidx.appcompat.widget.Toolbar
                app:layout_collapseMode="pin"
                android:id="@+id/toolbarMain"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Online Private Courses"
                android:textColor="?attr/colorSecondaryVariant"
                android:textSize="@dimen/textSizeTitle" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IELTS Prep | General English | Business English"
                android:textSize="@dimen/textSizeDate" />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:text="Why go to a language school when you can bring your teacher to the comfort of your home or office anywhere in the world."
                android:textSize="@dimen/textSizeDescription" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/img_one_to_one" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="One-to-One Classes"
                android:textColor="?attr/colorSecondaryVariant"
                android:textSize="@dimen/textSizeTitle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="10 Sessions"
                    android:textSize="@dimen/textSizeDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text=": $199 USD"
                    android:textSize="@dimen/textSizeDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="(Save ~ 14%)"
                    android:textColor="@color/Green"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Session by Session : $23 USD"
                android:textSize="@dimen/textSizeDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="✓ Private teacher on Skype/Zoom"
                android:textSize="@dimen/textSizeDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="✓ One-hour lessons made just for you"
                android:textSize="@dimen/textSizeDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="✓ Get the class recording after each lesson
"
                android:textSize="@dimen/textSizeDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="✓ 24/7 premium support"
                android:textSize="@dimen/textSizeDescription" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_OnetoOne_Register"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:text="Register Now"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="10sp"
                app:backgroundTint="?attr/colorPrimary"
                app:cornerRadius="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_main_courses" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_height="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:justificationMode="inter_word"
                android:text="After registration (session by session or 10-session packages), we will contact you to arrange the days and times of your classes based on your preferences and tutor availability. Need a free consultation?"
                android:textSize="@dimen/textSizeDescription" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_OnetoOne_consultation"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="10dp"
                android:text="Get Consultation "
                android:textColor="?attr/colorSecondaryVariant"
                android:textSize="10sp"
                app:cornerRadius="20dp"
                app:strokeColor="?attr/colorPrimary"
                app:strokeWidth="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Live in IRAN?" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="To register at a discounted price , " />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_OnetoOne_IRAN"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginEnd="16dp"
                        android:text="Click here"
                        android:textColor="?attr/colorSecondaryVariant"
                        android:textSize="10sp"
                        app:cornerRadius="20dp"
                        app:layout_constraintBottom_toBottomOf="@+id/button_main_courses"
                        app:layout_constraintEnd_toStartOf="@+id/button_main_courses"
                        app:layout_constraintTop_toTopOf="@+id/button_main_courses"
                        app:rippleColor="?attr/colorSecondary"
                        app:strokeColor="?attr/colorPrimary"
                        app:strokeWidth="1dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>