<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorTertiary"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSizeTitle"
            android:textColor="?attr/colorSecondaryVariant"
            android:justificationMode="inter_word"
            android:text="About Us"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSizeDescription"
            android:justificationMode="inter_word"
            android:text="@string/aboutUs"
            tools:ignore="HardcodedText" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/webSiteBtn"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:text="IELTSJUICE.com"
            app:strokeWidth="2dp"
            android:layout_marginTop="20dp"

            app:cornerRadius="8dp"
            app:strokeColor="?attr/colorPrimary"/>

        <LinearLayout
            android:layout_marginTop="20dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageView
                android:id="@+id/skypeBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_skype"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/telegramBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_telegram"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/youtubeBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_youtube"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageView
                android:id="@+id/instagramBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_instagram"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/twitterBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_twitter"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/facebookBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_facebook"

                android:layout_weight="1"/>
        </LinearLayout>
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="2dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textSizeTitle"
            android:layout_marginTop="10dp"
            android:textColor="?attr/colorSecondaryVariant"
            android:text="Our Amazing Team"/>

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/our_team"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:justificationMode="inter_word"
            android:textSize="@dimen/textSizeDescription"
            android:text="Meet the people who have given life to the website, teach online and create contents for you on IELTS Juice online academy."/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/aboutUsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutAnimation="@anim/recycler_animation"
       />

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:text="Copyright Â© 2022 | Powered by Juice Academy. Educating the world since 2011"
            android:textSize="@dimen/textSizeDate"
            android:justificationMode="inter_word"
            android:textColor="?attr/colorSecondaryVariant"
            tools:ignore="HardcodedText" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/versionNumber"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:textSize="@dimen/textSizeDate"
            android:textColor="?attr/colorSecondaryVariant" />
    </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>