<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorTertiary">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">


            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:id="@+id/aboutUsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Us "
                android:textColor="?attr/colorSecondaryVariant"
                android:textSize="@dimen/textSizeTitle"

                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />


            <TextView
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:text="@string/aboutUs"
                android:textSize="@dimen/textSizeDescription"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/aboutUsTitle"
                tools:ignore="HardcodedText,UnusedAttribute" />


            <TextView
                android:layout_marginStart="15dp"
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Our Team"
                android:textColor="?attr/colorSecondaryVariant"
                android:textSize="@dimen/textSizeTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView5"
                tools:ignore="HardcodedText" />



            <TextView
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:justificationMode="inter_word"
                android:text="Meet the people who have given life to the website, teach online and create contents for you on IELTS Juice online academy."
                android:textSize="@dimen/textSizeDescription"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7"
                tools:ignore="HardcodedText,UnusedAttribute" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/aboutUsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="24dp"
            android:layoutAnimation="@anim/recycler_animation"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Follow us on Social Media"
            android:textSize="@dimen/textSizeDescription"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp" />

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageView
                android:id="@+id/skypeBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/ic_skype"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/telegramBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/ic_telegram"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/youtubeBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/ic_youtube"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageView
                android:id="@+id/instagramBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/ic_instagram"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/twitterBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/ic_twitter"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/facebookBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"

                android:src="@drawable/ic_facebook"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/webSiteBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="?attr/colorPrimary"
            android:text="IELTSJUICE.com"
            app:cornerRadius="30dp"
            app:rippleColor="#ebf5f4"
            tools:ignore="HardcodedText" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:justificationMode="inter_word"
            android:text="Copyright Â© 2022 | Powered by Juice Academy. Educating the world since 2011"
            android:textColor="?attr/colorSecondaryVariant"
            android:textSize="@dimen/textSizeDate"
            tools:ignore="HardcodedText,UnusedAttribute" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="@string/versionNumber"
            android:textColor="?attr/colorSecondaryVariant"
            android:textSize="@dimen/textSizeDate" />

    </LinearLayout>


</androidx.core.widget.NestedScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>