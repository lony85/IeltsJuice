<?xml version="1.0" encoding="utf-8"?>


<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ConsultationActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimaryVariant"
        android:fitsSystemWindows="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            app:contentScrim="?attr/colorPrimaryVariant"
            app:collapsedTitleTextAppearance="@font/roboto"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:id="@+id/collapsingBarMain"
            style="?attr/collapsingToolbarLayoutLargeStyle"
            android:layout_width="match_parent"
            android:layout_height="100dp">


            <ImageView
                app:layout_collapseMode="parallax"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="-30dp"
                android:layout_marginTop="45dp"
                android:fitsSystemWindows="true"
                android:src="@drawable/img_orance"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_gravity="end"
                app:layout_collapseMode="parallax"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="-50dp"
                android:layout_marginTop="-25dp"
                android:fitsSystemWindows="true"
                android:src="@drawable/img_orance"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                app:layout_collapseMode="parallax"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:fitsSystemWindows="true"
                android:src="@drawable/ielts_juice_logo" />
            <androidx.appcompat.widget.Toolbar
                app:layout_collapseMode="pin"
                android:id="@+id/toolbarMain"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBar">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"

            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Online Consultation"
                android:textColor="?attr/colorSecondaryVariant"
                android:textSize="@dimen/textSizeTitle"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:justificationMode="inter_word"
                android:text="Face-to-face consultation with experienced English teachers and IELTS experts certified by Cambridge University and trained by British Council and IDP Australia over Skype (Free for a limited time)."
                android:textSize="@dimen/textSizeDescription" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                app:strokeColor="?attr/colorPrimary"
                app:strokeWidth="1dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_online_consultation" />


            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Consultation"
                android:textColor="?attr/colorSecondaryVariant"
                android:textSize="@dimen/textSizeTitle"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/strike_text"
                    android:textSize="@dimen/textSizeDescription" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="free*"
                    android:textColor="@color/Green"
                    android:textSize="@dimen/textSizeDescription"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* free for a limited time"
                android:textSize="@dimen/textSizeDate" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:justificationMode="inter_word"
                android:text="Success in English learning and getting a great score in IELTS begins with reliable advice. In a 20-minute consultation, you will:"
                android:textSize="@dimen/textSizeDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text=" • get to know your exact English level"
                android:textSize="@dimen/textSizeDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" • be introduced to recommended learning materials"
                android:textSize="@dimen/textSizeDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" • receive a personalized study plan"
                android:textSize="@dimen/textSizeDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" • learn about available study methods"
                android:textSize="@dimen/textSizeDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:justificationMode="inter_word"
                android:text="All you need to do is book a consultation and one of our experienced English teachers will show up on Skype to meet you."
                android:textSize="@dimen/textSizeDescription" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonConsultation"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="10dp"
                android:text="Schedule time"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="10sp"
                app:backgroundTint="?attr/colorPrimary"
                app:cornerRadius="20dp" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Frequently Asked Questions"
                android:textColor="?attr/colorSecondaryVariant"
                android:textSize="@dimen/textSizeTitle"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Here are our answers to some of your questions about our online consultation service at IELTS Juice Online Academy" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/question1_cardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="5dp"
                    app:rippleColor="?attr/colorSecondary"
                    app:strokeColor="?attr/colorPrimary"
                    app:strokeWidth="1dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center|start"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/ic_question_mark" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="40dp"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="1dp"
                                android:layout_marginEnd="10dp"
                                android:text="@string/Q_consultation_01"
                                android:textSize="18sp" />


                        </LinearLayout>

                        <com.google.android.material.divider.MaterialDivider
                            android:id="@+id/questionAnswerDivider1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginStart="45dp"
                            android:layout_marginEnd="40dp" />

                        <TextView
                            android:id="@+id/txtA1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="60dp"
                            android:layout_marginEnd="40dp"
                            android:layout_marginBottom="2dp"
                            android:justificationMode="inter_word"
                            android:textSize="0dp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/icArrowQ1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center|end"
                        android:src="@drawable/ic_arrow_right" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/question2_cardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="5dp"
                    app:rippleColor="?attr/colorSecondary"
                    app:strokeColor="?attr/colorPrimary"
                    app:strokeWidth="1dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center|start"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/ic_question_mark" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="40dp"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="1dp"
                                android:layout_marginEnd="10dp"
                                android:text="@string/Q_consultation_02"
                                android:textSize="18sp" />


                        </LinearLayout>

                        <com.google.android.material.divider.MaterialDivider
                            android:id="@+id/questionAnswerDivider2"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginStart="45dp"
                            android:layout_marginEnd="40dp" />

                        <TextView
                            android:id="@+id/txtA2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="60dp"
                            android:layout_marginEnd="40dp"
                            android:layout_marginBottom="2dp"
                            android:justificationMode="inter_word"
                            android:textSize="0dp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/icArrowQ2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center|end"
                        android:src="@drawable/ic_arrow_right" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/question3_cardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="5dp"
                    app:rippleColor="?attr/colorSecondary"
                    app:strokeColor="?attr/colorPrimary"
                    app:strokeWidth="1dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center|start"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/ic_question_mark" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="40dp"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="1dp"
                                android:layout_marginEnd="10dp"
                                android:text="@string/Q_consultation_03"
                                android:textSize="18sp" />


                        </LinearLayout>

                        <com.google.android.material.divider.MaterialDivider
                            android:id="@+id/questionAnswerDivider3"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginStart="45dp"
                            android:layout_marginEnd="40dp" />

                        <TextView
                            android:id="@+id/txtA3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="60dp"
                            android:layout_marginEnd="40dp"
                            android:layout_marginBottom="2dp"
                            android:justificationMode="inter_word"
                            android:textSize="0dp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/icArrowQ3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center|end"
                        android:src="@drawable/ic_arrow_right" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/question4_cardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="5dp"
                    app:rippleColor="?attr/colorSecondary"
                    app:strokeColor="?attr/colorPrimary"
                    app:strokeWidth="1dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center|start"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/ic_question_mark" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="40dp"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="1dp"
                                android:layout_marginEnd="10dp"
                                android:text="@string/Q_consultation_04"
                                android:textSize="18sp" />


                        </LinearLayout>

                        <com.google.android.material.divider.MaterialDivider
                            android:id="@+id/questionAnswerDivider4"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginStart="45dp"
                            android:layout_marginEnd="40dp" />

                        <TextView
                            android:id="@+id/txtA4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="60dp"
                            android:layout_marginEnd="40dp"
                            android:layout_marginBottom="2dp"
                            android:justificationMode="inter_word"
                            android:textSize="0dp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/icArrowQ4"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center|end"
                        android:src="@drawable/ic_arrow_right" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/question5_cardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="5dp"
                    app:rippleColor="?attr/colorSecondary"
                    app:strokeColor="?attr/colorPrimary"
                    app:strokeWidth="1dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center|start"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/ic_question_mark" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="40dp"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="1dp"
                                android:layout_marginEnd="10dp"
                                android:text="@string/Q_consultation_05"
                                android:textSize="18sp" />


                        </LinearLayout>

                        <com.google.android.material.divider.MaterialDivider
                            android:id="@+id/questionAnswerDivider5"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginStart="45dp"
                            android:layout_marginEnd="40dp" />

                        <TextView
                            android:id="@+id/txtA5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="60dp"
                            android:layout_marginEnd="40dp"
                            android:layout_marginBottom="2dp"
                            android:justificationMode="inter_word"
                            android:textSize="0dp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/icArrowQ5"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center|end"
                        android:src="@drawable/ic_arrow_right" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/question6_cardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="5dp"
                    app:rippleColor="?attr/colorSecondary"
                    app:strokeColor="?attr/colorPrimary"
                    app:strokeWidth="1dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center|start"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/ic_question_mark" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="40dp"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="1dp"
                                android:layout_marginEnd="10dp"
                                android:text="@string/Q_consultation_06"
                                android:textSize="18sp" />


                        </LinearLayout>

                        <com.google.android.material.divider.MaterialDivider
                            android:id="@+id/questionAnswerDivider6"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginStart="45dp"
                            android:layout_marginEnd="40dp" />

                        <TextView
                            android:id="@+id/txtA6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="60dp"
                            android:layout_marginEnd="40dp"
                            android:layout_marginBottom="2dp"
                            android:justificationMode="inter_word"
                            android:textSize="0dp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/icArrowQ6"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center|end"
                        android:src="@drawable/ic_arrow_right" />
                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
